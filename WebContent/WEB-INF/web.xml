<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  
  <display-name>Database</display-name>
  <servlet>
    <servlet-name>showAll</servlet-name>
    <servlet-class>View.showAll</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>showAll</servlet-name>
    <url-pattern>/view</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>addStudent</servlet-name>
    <servlet-class>View.addStudent</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>addStudent</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>modifyStudent</servlet-name>
    <servlet-class>View.modifyStudent</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>modifyStudent</servlet-name>
    <url-pattern>/modify</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>deleteStudent</servlet-name>
    <servlet-class>View.deleteStudent</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>deleteStudent</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>
</web-app>